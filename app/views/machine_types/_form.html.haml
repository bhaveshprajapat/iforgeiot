= form_for @machine_type do |f|
  - if @machine_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@machine_type.errors.count, "error")} prohibited this machine_type from being saved:"
      %ul
        - @machine_type.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :machine_type
    = f.text_field :machine_type
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
