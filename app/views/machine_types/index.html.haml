%h1 Listing machine_types

%table.table.table-hover
  %thead
    %tr
      %th Machine type
      %th Description
      %th
      %th
      %th

  %tbody
    - @machine_types.each do |machine_type|
      %tr
        %td= machine_type.machine_type
        %td= machine_type.description
        %td= link_to 'Show', machine_type
        %td= link_to 'Edit', edit_machine_type_path(machine_type)
        %td= link_to 'Destroy', machine_type, method: :delete, data: { confirm: 'Are you sure?' }

